<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/content_padding">

    <ImageView
        android:id="@+id/itemReleaseInfoFrontCoverImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/cover_the_wall" />

    <TextView
        android:id="@+id/itemReleaseInfoTitleTextView"
        style="@style/DetailsText.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_margin"
        app:layout_constraintBottom_toTopOf="@+id/itemReleaseInfoReleaseYearTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/itemReleaseInfoFrontCoverImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="The Wall" />

    <TextView
        android:id="@+id/itemReleaseInfoReleaseYearTextView"
        style="@style/DetailsText.Value"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/itemReleaseInfoTitleTextView"
        app:layout_constraintTop_toBottomOf="@+id/itemReleaseInfoTitleTextView"
        tools:text="1979" />
</androidx.constraintlayout.widget.ConstraintLayout>